<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp">

    <TextView
        android:id="@+id/connecting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:text="Attempting to connect to Google Play games. Please wait ..."
        android:visibility="visible"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/loginDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:text="Google Play Games is used for storing the save games, so that you can continue your progress on any device. You may need to have the Google Play Games app installed. Click the button below to log in."
        android:visibility="gone"
        android:textSize="16sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:visibility="gone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/obbMissing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:visibility="gone"
        android:text="Game data files are missing! Cannot continue."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/legacyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:text="The older versions of this game stored the save files on your device. The new version now stores in in Google Play games. If you want to migrate your locally stored games to Google Play games, click the button below."
        android:visibility="gone"
        android:textSize="16sp" />

    <Button
        android:id="@+id/migrateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Migrate Legacy Saves"
        android:visibility="gone"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/migrateHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Do not show again" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip and Start Game"
        android:visibility="visible"
        android:layout_marginTop="20sp"
        android:textSize="16sp" />
</LinearLayout>